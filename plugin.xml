<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-apple-pay-supression" version="0.0.1"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <name>ApplePaySupression</name>
    <js-module name="ApplePaySupression" src="www/ApplePaySupression.js">
        <clobbers target="ApplePaySupression" />
    </js-module>

    <platform name="ios">
    <framework src="PassKit.framework"/>
        <config-file target="config.xml" parent="/*">

        <!--
        Add in any class declaration names here so that they can be accessed by Cordova. Else the plugin will fail.
        -->

            <feature name="ApplePaySupression">
                <param name="ios-package" value="ApplePaySupression" />
            </feature>

        </config-file>

        <!-- Add in the plugin .swift files here -->
        <source-file src="src/ios/ApplePaySupression.swift" />

        <!-- Add in the swift-support plugin by default -->
        <dependency id="cordova-plugin-add-swift-support" version="1.7.2"/>
    </platform>
</plugin>